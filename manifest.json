{
  "manifest_version": 3,
  "name": "AI-Powered Trading Assistant",
  "version": "1.0",
  "description": "An AI-powered Chrome extension that analyzes TradingView pages and executes actions based on natural language commands",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.tradingview.com/*",
    "https://tradingview.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.tradingview.com/*",
        "https://tradingview.com/*"
      ],
      "js": [
        "utils/domExtractor.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI Trading Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "utils/*.js"
      ],
      "matches": [
        "https://www.tradingview.com/*",
        "https://tradingview.com/*"
      ]
    }
  ]
}